import axios from "./../Plugins/Axios";

export default {
    async login(data: LoginRequest) {
        return axios.post("/auth/login", {
            email: data.email,
            password: data.password,
            remember_me: data.rememberMe
        });
    },

    async register(registerPayloads) {
        return axios.post("/auth/register", {
            email: registerPayloads.email,
            password: registerPayloads.password,
            plain_password: registerPayloads.plain_password
        });
    },

    async refreshToken(refreshToken) {
        return axios.post('/auth/token/refresh', {refresh_token: refreshToken});
    }

};

interface LoginRequest {
    email: string;
    password: string;
    rememberMe: boolean
}

interface LoginResponse {
    token: string;
    refreshToken: string;
    role: string
}
