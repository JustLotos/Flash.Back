<template>
    <v-text-field
            validate-on-blur
            id="password"
            label="Пароль"
            name="password"
            v-model="value"
            prepend-icon="mdi-lock"
            :rules="rules"
            :type="show ? 'text' : 'password'"
            :append-icon="show ? 'mdi-eye' : 'mdi-eye-off'"
            :error-messages="errorMessage"
            @click:append="show = !show"
    ></v-text-field>
</template>

<script lang="ts">
import {Component, Prop, Model, Vue, Emit} from 'vue-property-decorator';

const EVENT_NAME = 'plainPasswordChange'.toLowerCase();
const PASSWORD_LENGTH = 8;

@Component
export default class PasswordControl extends Vue {
    show: boolean = false;
    rules: [] = [];

    @Prop({default: ''})
    initial: string;

    @Prop({default: ''})
    message: string;

    @Model(EVENT_NAME, { type: Boolean }) readonly password!: string;

    get value()
    {
        return this.password;
    }
    set value(value)
    {
        this.$emit(EVENT_NAME, value);
    }

        // data: function () {
        //     return {
        //         show: false,
        //         rules: [
        //             v => !!v || 'Пароль обязателен для заполнения',
        //             v => (v && v.length >= PASSWORD_LENGTH) || 'Пароль должен быть больше '+PASSWORD_LENGTH+' символов',
        //         ],
        //     }
        // }
    }
</script>

