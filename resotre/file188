<?php

declare(strict_types=1);

namespace App\Model\Flash\UseCase\Deck\Create;

use App\Model\Flash\Entity\Deck\Deck;
use App\Model\Flash\Entity\Deck\DeckDTO;
use App\Model\Flash\Entity\Deck\Types\Settings;
use App\Model\Flash\Entity\Learner\Learner;
use App\Model\Flash\Repository\DeckRepository;
use App\Model\Flusher;
use App\Service\FlushService;
use App\Service\ValidateService;
use DateTimeImmutable;

class Handler
{
    private $flusher;
    private $validator;
    private $repository;

    public function __construct(
        ValidateService $validator,
        FlushService $flusher,
        DeckRepository $repository
    ) {
        $this->flusher = $flusher;
        $this->validator = $validator;
        $this->repository = $repository;
    }

    public function handle(Command $command, Learner $learner): Deck
    {
        $this->validator->validate($command);

        $settings = new Settings(
            $command->baseInterval,
            $command->minTime,
            $command->limitRepeat,
            $command->limitLearning,
            $command->difficultyIndex
        );

        $now  = new DateTimeImmutable();
        $deck = new Deck($learner, $command->name, $settings, $now, $command->description);

        $this->repository->add($deck);
        $this->flusher->flush();
        return $deck;
    }
}
