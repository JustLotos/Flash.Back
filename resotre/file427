<?php

declare(strict_types=1);

namespace App\Controller\API\Auth;

use DomainException;
use Gesdinet\JWTRefreshTokenBundle\Service\RefreshToken;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\Routing\Annotation\Route;

/** @Route(value="api/v1/auth/a") */
class AController extends AbstractController
{
    /** @Route("/login", name="login2", methods={"POST"}) */
    public function login() : void
    {
        throw new DomainException('You shouldn\'t have gotten to this place');
    }

    /** @Route("/token/refresh", name="refreshToken2", methods={"POST"}) */
    public function refresh(Request $request, RefreshToken $refreshService)
    {
        return $refreshService->refresh($request);
    }
}
