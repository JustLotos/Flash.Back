import Vue from "vue";
import Router, {RouteConfig} from 'vue-router'
import {AppRoutes} from "./Modules/Common/Routes/AppRoutes";
import {AuthRoutes} from "./Modules/Common/Routes/AuthRoutes";
import {LearnerRoutes} from "./Modules/Flash/Routes/LearnerRoutes";
import {DeckRoutes} from "./Modules/Flash/Routes/DeckRoutes";

Vue.use(Router);

export const routes: Array<RouteConfig> = [
    ...AppRoutes,
    ...DeckRoutes,
    ...LearnerRoutes,
    ...AuthRoutes,
    {
        path: '*', redirect: '/',
        meta: {menu: false, auth: false}
    },
];

export default new Router({
    mode: 'history',
    base: process.env.APP_HOST,
    routes: routes
});




